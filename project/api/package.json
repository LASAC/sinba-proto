{
  "name": "sinba-api",
  "version": "2.0.0",
  "description": "SINBA - Sistema de Informações de Bacias Hidrográficas",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run build && npm run build:client",
    "start": "nodemon -w src --exec \"babel-node src\"",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "lint": "eslint src/",
    "lint-fix": "npm run lint -- --fix",
    "build": "babel src -s -D -d dist --ignore test.js && npm run api-docs:generate",
    "build:client": "echo \"TODO: BUILD CLIENT\"",
    "api-docs:generate": "swagger-jsdoc -d src/api-docs/swagger-definitions.js -o dist/api-docs/swagger.yaml",
    "api-docs:preview": "swagger_swagger_fileName=dist/api-docs/swagger.yaml swagger project edit"
  },
  "author": "LASAC/UFMS, Marília Chinem Kameya, Geraldo Barbosa Landre",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "json": "^9.0.6",
    "memorystore": "^1.6.0",
    "moment": "^2.20.1",
    "morgan": "^1.9.0",
    "session-file-store": "^1.2.0",
    "swagger-jsdoc": "^1.9.7",
    "swagger-ui-express": "^3.0.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^21.2.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "concurrently": "^3.5.1",
    "eslint": "^4.12.1",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1",
    "pre-push": "^0.1.1",
    "supertest": "^3.0.0"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules",
      "<rootDir>/dist"
    ]
  },
  "pre-push": [
    "test",
    "lint"
  ],
  "license": "MIT"
}
